<%- include("../partials/header")%>
<%- include("../partials/navbar")%>

<div class="container mt-3">
    <h5 class="display-5 my-3">Add New Products</h5>
    <form action="/products" method="POST" enctype="multipart/form-data" class="validated-form" novalidate>
        <div class="mb-3">
          <label for="name" class="form-label">Product Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Enter the product name" required>
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Product Price</label>
            <input type="number" class="form-control" id="price" name="price" placeholder="Enter the product price" required>
        </div>
        <div class="mb-3">
            <label for="desc" class="form-label">Product Description</label>
            <textarea  id="text" cols="30" rows="10" class="form-control" name="desc" required></textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input type="file" class="form-control-file" id="image" name="image" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>







<%- include("../partials/footer")%>